{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    // "no-param-reassign": [
    //   "error",
    //   {
    //     "props": false
    //   }
    // ],
    "no-param-reassign": "off",
    "no-console": "off",
    "prettier/prettier": "error"
  }
}
